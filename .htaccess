# Aktifkan mod_rewrite
RewriteEngine On

# Lindungi file penting agar tidak bisa diakses langsung
<FilesMatch "(\.env|\.htaccess|koneksi\.php)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# Jika butuh URL cantik di masa depan, aturan ini bisa diaktifkan:
